@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-outline-dark shadow-none">
				<i class="bi bi-plus-circle"></i> Add New Catergory
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group-sm" role="button">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
								<i class="bi bi-pencil p-2" style="font-style:normal"> Edit</i>
						</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill p-2" style="font-style:normal"> Delete</i>
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>